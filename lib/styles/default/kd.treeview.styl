@import "./kdfn"
/*
**  JTREE STYLES
*/

.kdview.jtreeview
  display               none
  // height                0
  // vendor                transition, height .15s ease-in-out
  &.expanded
    display             block
    height              auto

.dim
  .kdlistitemview-jtreeitem
    &.selected
      color           pink

.kdlistitemview-jtreeitem
  height                auto
  noTextSelection()
  &.selected
    color             #fc2145
  span.arrow
    size              10px,10px
    margin            4px 0 0 3px
    borderBox()
    fl()
  &.has-sub-items
    span.arrow
      border            5px solid transparent
      border-left-color #666
  &.expanded
    span.arrow
      margin            6px 3px 0 0
      border-left-color transparent
      border-top-color  #666

.drag-helper-list
  abs()
  top                   0
  left                  0

